{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": "../",
    "paths": {
      "stardust": ["src"],
      "stardust/*": ["src/*"]
    },
    "typeRoots": [
      "types",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "../types",
    "../src",
    "../docs/src"
  ]
}
