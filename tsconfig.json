{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "paths": {
      "stardust": ["src"],
      "stardust/*": ["src/*"]
    },
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "types",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "src",
    "docs/src",
    "test",
    "gulp",
    "build",
    "types"
  ]
}
